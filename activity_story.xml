<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C">

    <!-- 1. Background Image (School) -->
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_school"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Character Image (Lucien) -->
    <!-- Positioned slightly higher so he isn't covered by buttons -->
    <ImageView
        android:id="@+id/img_character"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- 3. Dialogue Interface Container -->
    <!-- We use a darker background to make text readable -->
    <LinearLayout
        android:id="@+id/dialogue_interface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Speaker Name -->
        <TextView
            android:id="@+id/tv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucien"
            android:textColor="#FF4444"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="serif"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>

        <!-- Dialogue Text -->
        <TextView
            android:id="@+id/tv_dialogue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The dialogue text will appear here. It might be long so we need space."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:minLines="3"/>

        <!-- Choice Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice 1"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_custom"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice 2"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_custom"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice 3"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_custom"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>