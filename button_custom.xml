<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#550000" /> <!-- Dark Red when clicked -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FF4444" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CC000000" /> <!-- Semi-transparent Black -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FF4444" /> <!-- Red Border -->
        </shape>
    </item>
</selector>